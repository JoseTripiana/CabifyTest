<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CabifyTest.Text"/>
    <style name="Theme.CabifyTest.Text.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Theme.CabifyTest.Text.Description">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
    </style>


    <style name="Theme.CabifyTest.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_16dp</item>
        <item name="android:backgroundTint">@color/color_edit_text_bkg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">18dp</item>
    </style>

    <style name="Theme.CabifyTest.EditText.Dropdown">
        <item name="android:drawableEnd">@drawable/icn_dropdown</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>